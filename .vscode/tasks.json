{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compile",
      "type": "cppbuild", //这个不知道为何使用process容易报错
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-g",
        "-Wall",
        // "-static-libgcc",
        // "-fexec-charset=GBK",
        "-std=c++23",
        "-lstdc++"
      ],

      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true, //显示命令
        "reveal": "always", //显示输出面板
        "focus": false, //不自动聚焦输出面板
        "panel": "shared" //共享输出面板
      },
      "problemMatcher": ["$gcc"]
    }
  ]
}
